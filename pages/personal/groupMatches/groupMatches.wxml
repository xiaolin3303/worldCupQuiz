<!--personal.wxml-->
<view class="personal-wrapper">
  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">小组赛</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">冠军赛</view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">淘汰赛</view>
  </view>

  <view class = "{{currentTab == 0 ? '' : 'none' }}">

    <view class="group-match-list">
      <view class="match"  wx:for="{{groupListData}}" wx:for-index="index" wx:for-item="group" wx:key="group">
        <view class="box">
          <view class="item-grouitemp"> {{group.group_id}}</view>
          <view class="item">
            <view class="country">
              <text>{{group.team_name1}}</text>
              <image src="{{group.team_url1}}" class="icon national-flag flag-right"></image>
            </view>
          </view>
          <view class="item">
            <view class="country">
              <image src="/assets/icons/vs-icon.png" class="icon vs"></image>
            </view>
          </view>
              <view class="item">
              <view class="country">
              <image src="{{group.team_url2}}" class="icon national-flag flag-left"></image>
              <text>{{group.team_name2}}</text>
            </view>
          </view>
        </view>
        <view class="box" >
          <view class="item" wx:for="{{group.answerlist}}" wx:for-index="i" wx:for-item="answer" wx:key="answer">
            <view 
              class="frist-victory select-btn {{quizRes[group.item_id].answerid === answer.answer_id || group.player_answer_id === answer.answer_id ? 'res-active' : ''}}"
              data-odds    = "{{answer.odd}}"
              data-itemid  = "{{group.item_id}}"
              data-answerid   = "{{answer.answer_id}}"
              data-lockanswer = "{{group.isLock === true}}"
              bindtap      = "handleQuizResult">
              <view>{{answer.answe_describe}}</view>
              <view>{{answer.odd}}</view>
            </view>
          </view>
        </view>
        <view class="item-bottom">
          <view class="tip-msg">
            <image src="/assets/icons/warning-icon.png" class="icon warning"></image>
            竞猜截止时间：6月12日 23:52
          </view>
          <view class="forecast-score">预计得分:{{quizRes[group.item_id].forecastScore || '-'}}</view>
          
        </view>
      </view>

    </view>

    <view class="bottom-confrim-btn row">
      <view class="col">
        <view class="row middle oper-list">
          <view class="col">
            <view class="icon-wrapper" bindtap="clearSelect">
              <image src="/assets/icons/delete-icon.png" class="icon delete"></image>
              <view >全部清除</view>
            </view>
            <view class="icon-wrapper">
              <image src="/assets/icons/select-all-icon.png" class="icon select-all"></image>
              <view>智能全选</view>
            </view>
          </view>
          <view class="col-auto tar ft12 mr10">
            预计积分:{{ totalScore || '-' }}
          </view>
        </view>
      </view>
      <view class="col-auto btn-wrapper">
        <button bindtap="submitGroupRes">确认</button>
      </view>
    </view>
  </view>

  <view class = "{{currentTab == 1 && !isChampionResTime  ? '' : 'none' }}">
    <view class='deadline'>投票截止时间：2018/06/14 18:00</view>
      <view class="champion-match-list">
        <view class="champion-match {{ selectChampion === champion.team_id1 ? 'selected' : ''}}" wx:for="{{championData}}" wx:for-index="i" wx:for-item="champion" wx:key="champion" data-championid="{{champion.team_id1}}" >
          <view class="box" >
            <view class="item">
                <view class="champion-country">{{champion.team_name1}}</view>
                <view style="font-size:12px;">目前票数：
                  <text class="vote-count">{{champion.vote_num}}</text>
                </view>
                <view 
                  class="vote-champion" 
                  data-teamid = "{{champion.team_id1}}"
                  bindtap="voteChampion">
                  投票
                </view>
              </view>
            </view>
          </view>
        </view>
  </view>


  <view class = "champion-wrapper {{currentTab == 1 && (1 || isChampionResTime) ?  '' : 'none' }}">
    <image class="result-background" src="/assets/guess-right.png"></image>
    <view class="mt40 user-list">
      <view class="mt20 ft12 tac">猜中人员名单</view>
      <view class="list mt20">
        <view class="user">
          <image class="avatar vam mr30"></image>
          <text>xuxu</text>
        </view>
        <view class="user">
          <image class="avatar vam mr30"></image>
          <text>xuxu</text>
        </view>
        <view class="user">
          <image class="avatar vam mr30"></image>
          <text>xuxu</text>
        </view>
      </view>
    </view>
  </view>
  
  <view class = "{{currentTab == 2 ? '' : 'none' }}">


    <view class="group-match-list">
      <view class="match"  wx:for="{{groupListData}}" wx:for-index="index" wx:for-item="group" wx:key="group">
        <view class="box">
          <view class="item-group"> {{group.group_id}}</view>
          <view class="item">
            <view class="country">{{group.team_name1}}🇷🇺</view>
          </view>
          <view class="item">
            <view class="country">
              <image src="/assets/icons/vs-icon.png" class="icon vs"></image>
            </view>
          </view>
                  <view class="item">
            <view class="country">{{group.team_name2}}</view>
          </view>
        </view>
        <view class="box" >
          <view class="item" wx:for="{{group.answerlist}}" wx:for-index="i" wx:for-item="answer" wx:key="answer">
            <view 
              class="frist-victory select-btn {{quizRes[group.item_id].answerid === answer.answer_id ? 'res-active' : ''}}"
              data-odds    = "{{answer.odd}}"
              data-itemid  = "{{group.item_id}}"
              data-answerid   = "{{answer.answer_id}}"
              bindtap      = "handleQuizResult">
              <view>{{answer.answe_describe}}</view>
              <view>{{answer.odd}}</view>
            </view>
          </view>
        </view>
        <view class="item-bottom">
          <view class="tip-msg">
            <image src="/assets/icons/warning-icon.png" class="icon warning"></image>
            竞猜截止时间：6月12日 23:52
          </view>
          <view class="forecast-score">预计得分:{{quizRes[group.item_id].forecastScore || '-'}}</view>
          
        </view>
      </view>

    </view>

    <view class="bottom-confrim-btn row">
      <view class="col">
        <view class="row middle oper-list">
          <view class="col">
            <view class="icon-wrapper" bindtap="clearSelect">
              <image src="/assets/icons/delete-icon.png" class="icon delete"></image>
              <view >全部清除</view>
            </view>
          </view>
          <view class="col-auto tar ft12 mr10">预计积分:50.8</view>
        </view>
      </view>
      <view class="col-auto btn-wrapper">
        <button bindtap="submitGroupRes">确认</button>
      </view>
    </view>
  </view>
</view>


