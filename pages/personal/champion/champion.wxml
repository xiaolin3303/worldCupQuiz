<!--personal.wxml-->
<view class="personal-wrapper">
  <view class="swiper-tab">
    <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">小组赛</view>
    <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">冠军赛</view>
    <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">淘汰赛</view>
  </view>
  <view class="group-sub-tab">
    <view class="sub-tab-item" wx:for="{{navigateList}}" wx:for-index="index" wx:for-item="letter" wx:key="letter" bindtap="clickSubTab" data-subtab="{{letter}}">
      <text class="{{subCurrentTab === letter ? 'sub-tab-active' : ''}}">{{letter}}</text>
    </view>
  </view>

  <view class="group-match-list">
    <view class="match">
      <view class="box">
        <view class="item">
          <view class="country">俄罗斯🇷🇺</view>
        </view>
        <view class="item">
          <view class="country">vs</view>
        </view>
                <view class="item">
          <view class="country">🇪🇬埃及</view>
        </view>
      </view>
      <view class="box">
        <view class="item">
          <view 
            class="frist-victory select-btn {{quizRes === '0_0' ? 'res-active' : ''}}"
            data-quizRes = '0_0'
            data-odds = '2.02'
            bindtap="handleQuizResult">
            <view>胜利</view>
            <view class=''>2.02</view>
          </view>
        </view>
        <view class="item">
          <view 
          class="draw select-btn {{quizRes === '0_1' ? 'res-active' : ''}}" 
          data-quizRes = '0_1'
          data-odds = '3.6'
          bindtap="handleQuizResult">
            <view>平局</view>
            <view>3.6</view>
          </view>
        </view>

        <view class="item">
          <view 
          class="second-victory select-btn {{quizRes === '0_2' ? 'res-active' : ''}}" 
          data-quizRes = '0_2'
          data-odds = '4.8'
          bindtap="handleQuizResult">
            <view>胜利</view>
            <view>4.8</view>
          </view>
        </view>
      </view>
      <view class="forecast-score">
        预计得分:{{forecastScore}}
      </view>
    </view>

    <view class="match">
      <view class="box">
        <view class="item">
          <view class="country">俄罗斯🇷🇺</view>
        </view>
        <view class="item">
          <view class="country">vs</view>
        </view>
                <view class="item">
          <view class="country">🇪🇬埃及</view>
        </view>
      </view>
      <view class="box">
        <view class="item">
          <view class="frist-victory select-btn">
            <view>胜利</view>
            <view class=''>2.02</view>
          </view>
        </view>
        <view class="item">
          <view class="draw select-btn">
            <view>平局</view>
            <view>3.6</view>
          </view>
        </view>

        <view class="item">
          <view class="second-victory select-btn">
            <view>胜利</view>
            <view>4.8</view>
          </view>
        </view>
      </view>

      <view class="forecast-score">
        预计得分:23
      </view>
    </view>
  </view>

  <view class="bottom-confrim-btn">
     <view class="oper-list"></view>
     <view class="btn-wrapper">
      <button>确认</button>
     </view>
  </view>
</view>


