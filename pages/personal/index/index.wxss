.personal-wrapper{

	background: #1f663b;
	height : 100%;
}

.tab-item{

	padding : 15px;
	border-bottom : 1px solid #ececec;
}
.tab-item text {

	width : 80px;
	display :inline-block;
	padding-left : 10px;
	text-align : center;
}
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #ccc;
    text-align: center;
    height: 92rpx;
    line-height: 88rpx;
    display: flex;
    flex-flow: row;
    justify-content: space-between;
    background :#217b41;
}
.group-sub-tab {
  	text-align : center;
  	line-height:29px;
  	padding : 10px;
  	width:100%;
  	background : #fff;

}
.group-sub-tab text{
	background : #ececec;
	height : 29px;
	width : 29px;
	display:inline-block;
   	border-radius: 19px;
   	margin-left : 10px;

}
.group-sub-tab .sub-tab-active {
	background :#f7c83b;
}
view .res-active {
	background :#f7c83b;
}
.sub-tab-item{
	width : 12.5%;
	display:inline-block;
}

.swiper-tab-item{
    width: 30%; 
    color:#fff;

}
.active{
    color:#217b41;
    background : #fff;
}
swiper{
  text-align: center;
}
.none {
	display : none 
}

.group-match-list {
	padding:20px;
	background:#1f663b;

}

.group-match-list .match {
	border-radius: 4px;
	background: #fefefe;
	padding-top: 10px;
	margin-bottom : 15px;
}

.group-match-list .match .box {
	display: flex;
	flex-direction: row;
	font-size:14px;
	text-align:center;

}

.group-match-list .match .box .item {
	flex: 1;
	justify-content: center;
	display:flex;
}

.group-match-list .match .box .item .country {
	height: 31px;
	font-size: 14px;
}

.icon.vs {
	width: 26px;
	height: 20px;
}

.icon.warning {
	width: 4px;
	height: 12px;
}

.group-match-list .match .tip {
	height: 25px;
	background: #edeef2;
	text-align: center;
	line-height: 25px;
	color: #217b41;
	font-size: 12px;
}
.country{
	font-size : 20px;
}
.select-btn{
	background:#ececec;
	border-radius:26px;
	width:70%;
	font-size:12px;
	margin-bottom:15px;
	padding:4px 0px;

}
.item-bottom{
	background : #ececec;
	position:relative;
	bottom : 0px;
	padding : 5px 0px ;
	font-size: 10px;
	border-bottom-left-radius: 10px;
	border-bottom-right-radius: 10px;
	display : flex ;
	width : 100%;
}
.forecast-score{
	
	color: #1f663b;
	position:absolute;
	right:12px;

}
.tip-msg {
	color: #ed3829;
	padding-left : 10px;

}
	
.bottom-confrim-btn{
	background : #fff ;
	display : flex;
	flex-flow: row;
	position : fixed;
	bottom : 0px ;
	width : 100%;
}
.oper-list{
	height: 120rpx;
	font-size: 25rpx;
}

.oper-list .icon-wrapper {
	width: 120rpx;
	text-align: center;
	display: inline-block;
}

.icon.delete, .icon.select-all {
	width: 50rpx;
	height: 50rpx;
}

.btn-wrapper{
	width : 280rpx;
}
.btn-wrapper button {
	background : #ed3829 ;
	color : #fff;
	border-radius: 0;
	width: 100%;
	height: 120rpx;
	line-height: 120rpx;
}
.champion-match-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    padding: 10px;
}
.champion-match {
	width : 50%;
	box-sizing: border-box;
	padding: 10px;
}
.champion-match .box {
	text-align:center;
	border-radius: 8px;
	background: #fff;
	padding-top: 5px;
}
.champion-match .item{	
	border-radius: 10px;
	height : 100%;
}
.item-group {
	position:relative;
	top:-10px;
	left:5px;
	height:32px;
	background: #f25160;
	width:16px;
	line-height:32px;
	color:#fff;
}

.champion-match .vote-count{	
	font-size: 16px;
	color: #ed3829;
}

.champion-match.selected .vote-champion {
	background: #f7c83b;
}
.champion-country,.vote-champion{
	font-size : 15px;
	margin-top :10px;

}
.deadline{
	color : #fff;
	font-size : 12px;
	margin-top : 10px;
	text-align : center;
}
.vote-champion{
	background : #edeef2;
	border-bottom-left-radius: 10px;
	border-bottom-right-radius: 10px;
	position :relative ;
	bottom : 0px;
	height : 35px;
	line-height : 35px;
}



