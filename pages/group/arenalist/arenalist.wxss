	margin-bottom : 10px;

}
.group-info{
	width : 100%;
	justify-content:center;
	background :  #ececec;
	text-align : center;
	padding : 10px;

}
.user-info-wrapper{
	display : flex ;
	margin-top : 25px;
	height: 100%;
}
