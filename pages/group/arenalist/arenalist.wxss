.arenalist-wrapper{
	padding : 30rpx;
	background : #21653c;

}
.arena-list{
	display : flex;
	flex-wrap : wrap;
}
.arena-box {
	box-sizing: border-box;
	padding: 20rpx;
	width: 50%;
}
.arena-item{	
	background: #fff;
	box-sizing: border-box;
	border-radius: 10rpx;
	color : #8f8f8f;
}

.arena-item.active  {
	background: #f7c83b;
}
.bottom{
	background : #349a58;
	border-bottom-left-radius: 4px;
	border-bottom-right-radius: 4px;
	color : #fff;
	padding : 2px;
}
.box{
	padding : 3px;
	height : 170rpx;
}
.bottom.bottom-active{
	background:#e5b012;
}
.open-arena{
	height:42px;
	width:104px;
	margin : 10px auto;

}
.lock{

	width:11px;
	height:14px;
	position:relative;
	bottom:-14px;
	left:34px;
}
.status{
	height : 20px;
}
.bottom.grey-bottom{
	background : #edeef2;
	color :#858688;
}