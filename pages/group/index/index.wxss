.tab-item{
	padding : 15px;
	border-bottom : 1px solid #ececec;
}
.tab-item text {
	width : 80px;
	display :inline-block;
	padding-left : 10px;
	text-align : center;
}
.title{
	font-size : 24px;
	text-align:center;
	margin-top : 20px;
}
.create-group-name{
	margin-top : 100px;
	width:75%;
	display : flex;
}
.create-group-name input {
	font-size:10px;
	width : 90%;
	padding : 5px;
	border : 1px #ececec solid ;
}
.create-group-name button {
	width : 50px ;
	height : 20px;
	font-size : 10px;
	background : red;
	color : #fff;
}
.groupeer-list{
	display : flex ;
	width : 100%;
	margin-top : 25px;
	justify-content:center;

}
.userinfo{	

	width:25%;
	display:flex;
	flex-direction:column;
	justify-content:center;
	text-align:center;

}
.userinfo text{
	font-size : 10px;
}
.userinfo-avatar{
	width : 30px;
	height : 30px;
	border-radius : 15px;
}
.btn-wrapper{
	margin-top : 20px;
	width : 100%;
}
.btn-wrapper button {
	width : 80%;
}
.tip-cover{
	height:100%;
	background:rgba(0,0,0,.6);
	color:#fff;
	width:100%;
	position:absolute;
	top:0px;
	
}